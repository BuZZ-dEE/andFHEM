<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="li.klass.fhem"
          android:versionCode="6"
          android:versionName="1.0.5">

    <application android:label="@string/app_name" android:icon="@drawable/icon" android:name="AndFHEMApplication"
                 android:theme="@android:style/Theme.Light.NoTitleBar">

        <activity android:name=".activities.MainActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.RoomListActivity" />
        <activity android:name=".activities.devicelist.RoomDetailActivity" android:theme="@android:style/Theme.Light" />
        <activity android:name=".activities.devicelist.AllDevicesActivity" />
        <activity android:name=".activities.devicelist.FavoritesActivity" />
        <activity android:name=".activities.PreferencesActivity" />

        <activity android:name=".activities.deviceDetail.KS300DeviceDetailActivity" android:theme="@android:style/Theme.Light" />
        <activity android:name=".activities.deviceDetail.FHTDeviceDetailActivity" android:theme="@android:style/Theme.Light" />
        <activity android:name=".activities.deviceDetail.HMSDeviceDetailActivity" android:theme="@android:style/Theme.Light" />
        <activity android:name=".activities.deviceDetail.FS20DeviceDetailActivity" android:theme="@android:style/Theme.Light" />
        <activity android:name=".activities.deviceDetail.CULWSDeviceDetailActivity" android:theme="@android:style/Theme.Light" />
        <activity android:name=".activities.deviceDetail.OregonDeviceDetailActivity" android:theme="@android:style/Theme.Light" />
        <activity android:name=".activities.deviceDetail.USBWXDeviceDetailActivity" android:theme="@android:style/Theme.Light" />

        <activity android:name="org.achartengine.GraphicalActivity"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <!--<uses-permission android:name="android.permission.SET_DEBUG_APP" />-->

    <supports-screens android:xlargeScreens="true"
                      android:anyDensity="true"
                      android:largeScreens="true"
                      android:normalScreens="true"
                      android:smallScreens="false" />

    <uses-sdk android:minSdkVersion="8" />
</manifest>
