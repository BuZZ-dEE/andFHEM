<resources>
    <style name="appwidget">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="appwidget_small" parent="appwidget"/>
    <style name="appwidget_medium" parent="appwidget"/>
    <style name="appwidget_big" parent="appwidget"/>

    <style name="appwidget_content">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/appwidget_background</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:id">@+id/main</item>
    </style>

    <style name="appwidget_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:text">item</item>
    </style>

    <style name="appwidget_caption" parent="appwidget_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:id">@+id/deviceName</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:text">deviceName</item>
    </style>

    <style name="appwidget_logo">
        <item name="android:src">@drawable/ic_launcher</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
    </style>
</resources>