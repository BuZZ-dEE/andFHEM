<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <TableLayout android:layout_height="wrap_content"
                 android:layout_width="fill_parent"
                 android:layout_marginTop="10dp">
        <TableRow>
            <TextView android:text="@string/startDate"
                      style="@style/deviceDetailDescription" />
            <TextView android:id="@+id/startDate"
                      android:text="01.01.2012"
                      style="@style/deviceDetailContent" />
            <Button android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/startDateSet"
                    android:text="@string/change"
                    style="@style/button"/>
        </TableRow>

        <TableRow>
            <TextView android:text="@string/startTime"
                      style="@style/deviceDetailDescription" />
            <TextView android:id="@+id/startTime"
                      android:text="11:11"
                      style="@style/deviceDetailContent" />
            <Button android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/startTimeSet"
                    android:text="@string/change"
                    style="@style/button"/>
        </TableRow>

        <TableRow>
            <TextView android:text="@string/endDate"
                      style="@style/deviceDetailDescription" />
            <TextView android:id="@+id/endDate"
                      android:text="02.01.2012"
                      style="@style/deviceDetailContent" />
            <Button android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/endDateSet"
                    android:text="@string/change"
                    style="@style/button"/>
        </TableRow>

        <TableRow>
            <TextView android:text="@string/endTime"
                      style="@style/deviceDetailDescription" />
            <TextView android:id="@+id/endTime"
                      android:text="22:22"
                      style="@style/deviceDetailContent" />
            <Button android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/endTimeSet"
                    android:text="@string/change"
                    style="@style/button"/>
        </TableRow>
        <Button android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/okButton"
                android:text="@string/okButton"
                android:layout_marginTop="20dp"
                style="@style/button"/>

    </TableLayout>

</LinearLayout>