<resources>

    <!-- the theme applied to the application or activity -->
    <style name="ApplicationTheme" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarTabBarStyle">@style/ApplicationActionBarTabBarStyle</item>
        <item name="android:actionBarTabBarStyle">@style/ApplicationActionBarTabBarStyle</item>

        <item name="actionBarTabStyle">@style/ApplicationActionBarTabStyle</item>
        <item name="android:actionBarTabStyle">@style/ApplicationActionBarTabStyle</item>

        <item name="android:actionBarItemBackground">@drawable/actionbar_item_bg_selectable</item>
        <item name="actionBarItemBackground">@drawable/actionbar_item_bg_selectable</item>

        <item name="android:dropDownListViewStyle">@style/ApplicationDropDownListViewStyle</item>
        <item name="dropDownListViewStyle">@style/ApplicationDropDownListViewStyle</item>

        <item name="android:actionDropDownStyle">@style/ApplicationActionDropDownStyle</item>
        <item name="actionDropDownStyle">@style/ApplicationActionDropDownStyle</item>

        <item name="android:popupMenuStyle">@style/ApplicationPopupMenu</item>
        <item name="popupMenuStyle">@style/ApplicationPopupMenu</item>

        <item name="android:actionBarWidgetTheme">@style/ApplicationActionBarWidgetTheme</item>
        <item name="actionBarWidgetTheme">@style/ApplicationActionBarWidgetTheme</item>

        <item name="android:spinnerStyle">@style/spinner</item>
    </style>

    <style name="ApplicationActionBarTabBarStyle" parent="Widget.Sherlock.ActionBar.Solid">
        <item name="android:background">@color/holoDark</item>
    </style>

    <style name="ApplicationActionBarTabStyle" parent="Widget.Sherlock.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tab_bg</item>
        <item name="background">@drawable/actionbar_tab_bg</item>
    </style>

    <style name="ApplicationActionDropDownStyle" parent="Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="android:dropDownSelector">@drawable/actionbar_item_bg_selectable</item>
        <item name="android:background">@drawable/theme_spinner_selector_dark</item>
    </style>

    <style name="ApplicationDropDownListViewStyle" parent="Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">@drawable/actionbar_item_bg_selectable</item>
    </style>

    <style name="ApplicationPopupMenu" parent="Widget.Sherlock.ListPopupWindow">
    </style>

    <style name="ApplicationActionBarWidgetTheme" parent="@style/Theme.Sherlock">
        <item name="android:popupMenuStyle">@style/ApplicationPopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/ApplicationDropDownListViewStyle</item>
    </style>

    <style name="Theme.Dialog.Light" parent="@android:style/Theme.Dialog">
        <item name="@android:windowBackground">@color/whitegrey</item>
        <item name="@android:textColor">@color/black</item>
    </style>

    <style name="toggleButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:focusable">false</item>
        <item name="android:background">@drawable/theme_toggle_button</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="seekBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:max">100</item>
        <item name="android:focusable">false</item>
        <item name="android:progressDrawable">@drawable/theme_seekbar</item>
        <item name="android:thumb">@drawable/theme_seekbar_thumb_selector</item>
        <item name="android:minWidth">90dp</item>
    </style>

    <style name="button" parent="android:style/Widget.Button">
        <item name="android:focusable">false</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/theme_button</item>

        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>

        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">2dp</item>

        <item name="android:textSize">12dp</item>
    </style>

    <style name="button_device_detail" parent="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="spinner" parent="android:style/Widget.Spinner">
        <item name="android:background">@drawable/theme_spinner_selector</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:popupBackground">@null</item>
    </style>

    <!-- #############################  -->
    <!--       ROOM DEVICE OVERVIEW     -->
    <!-- #############################  -->

    <style name="deviceOverviewParent" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#b84100</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="deviceOverviewDescription" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_weight">5</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">13dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="deviceOverviewCaption" parent="deviceOverviewDescription">
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="deviceOverviewContent" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">13dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="deviceOverviewTable">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:stretchColumns">1</item>-->

        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="deviceOverviewLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="deviceOverviewLayoutDeviceName">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxWidth">120dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="deviceOverviewToggleButton" parent="toggleButton">
        <item name="android:layout_weight">0</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:width">90dp</item>
        <item name="android:layout_marginRight">5dp</item>

    </style>

    <style name="deviceOverviewSeekBar" parent="seekBar">

        <!--<item name="android:layout_alignParentRight">true</item>-->
        <item name="android:layout_weight">2</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <!-- #############################  -->
    <!--       DEVICE DETAIL            -->
    <!-- #############################  -->

    <style name="deviceDetailCaption">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/navigationBarBackground</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="deviceDetailSectionCaption">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#b84100</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>


    <style name="deviceDetailDescription" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:minWidth">160dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="deviceDetailContent" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:minWidth">160dp</item>
    </style>

    <style name="deviceDetailContentSeek" parent="seekBar">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_span">2</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="deviceDetailContentToggle" parent="toggleButton">
    </style>

    <style name="deviceDetailTable">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stretchColumns">3</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>
</resources>