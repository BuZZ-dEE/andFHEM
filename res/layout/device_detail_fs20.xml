<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <TextView android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:id="@+id/deviceType"
              android:textColor="#b84100"
              android:textSize="20dp"
              android:paddingLeft="3dp"
              android:text="@string/generalDetails"
              android:layout_marginBottom="3dp"
              android:layout_marginTop="3dp"
            />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:stretchColumns="1"
                 android:paddingBottom="5dp"
                 android:paddingLeft="20dp"
                 android:paddingRight="20dp"
            >
        <TableRow>
            <TextView android:text="@string/state"
                      android:layout_column="1" />
            <TextView android:id="@+id/state"
                      android:gravity="right"
                      android:text="xx"/>
        </TableRow>

        <TableRow>
            <TextView android:text="@string/measured"
                      android:layout_column="1" />
            <TextView android:id="@+id/measured"
                      android:gravity="right"
                      android:text="xx.xx.xx xx:xx"/>
        </TableRow>

        <TableRow android:id="@+id/switchSeekBarRow">
            <TextView android:text="@string/switchDevice"
                      android:layout_column="1" />
            <SeekBar  android:id="@+id/seekBar"
                      android:layout_width="70dip"
                      android:layout_height="wrap_content"
                      android:max="100"
                      android:focusable="false"
                      android:layout_alignParentRight="true"
                    />

        </TableRow>

        <TableRow android:id="@+id/switchToggleButtonRow">
            <TextView android:text="@string/switchDevice"
                      android:layout_column="1" />
            <ToggleButton android:id="@+id/switchButton"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_weight="0"
                          android:onClick="onFS20Click"
                          android:focusable="false"
                          android:gravity="right"

                    />
        </TableRow>

        <Button android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/switchSetOptions"
                android:id="@+id/switchSetOptions"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"/>
    </TableLayout>
</LinearLayout>