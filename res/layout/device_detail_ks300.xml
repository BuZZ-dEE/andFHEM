<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <TextView style="@style/deviceDetailSectionCaption"
              android:text="@string/generalDetails" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 style="@style/deviceDetailTable">

        <TableRow android:id="@+id/tableRowTemperature">
            <TextView android:text="@string/temperature"
                      style="@style/deviceDetailDescription" />
            <TextView android:id="@+id/temperature"
                      android:text="xx Â°C"
                      style="@style/deviceDetailContent" />
        </TableRow>

        <TableRow android:id="@+id/tableRowWind">
            <TextView android:text="@string/wind"
                      style="@style/deviceDetailDescription" />
            <TextView android:id="@+id/wind"
                      android:layout_column="2"
                      android:text="xx km/h"
                      style="@style/deviceDetailContent" />
        </TableRow>

        <TableRow android:id="@+id/tableRowRain">
            <TextView android:text="@string/rain"
                      style="@style/deviceDetailDescription" />
            <TextView android:id="@+id/rain"
                      android:text="xx l"
                      style="@style/deviceDetailContent" />
        </TableRow>

        <TableRow android:id="@+id/tableRowHumidity">
            <TextView android:text="@string/humidity"
                      style="@style/deviceDetailDescription" />
            <TextView android:id="@+id/humidity"
                      android:text="xx %"
                      style="@style/deviceDetailContent" />
        </TableRow>

        <TableRow android:id="@+id/tableRowIsRaining">
            <TextView android:text="@string/isRaining"
                      style="@style/deviceDetailDescription" />
            <TextView android:id="@+id/isRaining"
                      android:text="xx (yes/no)"
                      style="@style/deviceDetailContent" />
        </TableRow>

        <TableRow android:id="@+id/tableRowAvgDay">
            <TextView android:text="@string/avgDay"
                      style="@style/deviceDetailDescription" />
            <TextView android:id="@+id/avgDay"
                      android:text="T: x.x  H: x  W: x.x  R: xx.x"
                      style="@style/deviceDetailContent" />
        </TableRow>

        <TableRow android:id="@+id/tableRowAvgMonth">
            <TextView android:text="@string/avgMonth"
                      style="@style/deviceDetailDescription" />
            <TextView android:id="@+id/avgMonth"
                      android:text="T: x.x  H: x  W: x.x  R: xx.x"
                      style="@style/deviceDetailContent" />
        </TableRow>

    </TableLayout>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="20dp"
                  android:orientation="vertical"
                  android:id="@+id/graphLayout">


        <TextView style="@style/deviceDetailSectionCaption"
                  android:text="@string/plots" />

        <Button android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/temperatureGraph"
                android:id="@+id/temperatureGraph"
                android:layout_marginLeft="10dp"/>
        <Button android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/rainGraph"
                android:id="@+id/rainGraph"
                android:layout_marginLeft="10dp"/>
        <Button android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/humidityGraph"
                android:id="@+id/humidityGraph"
                android:layout_marginLeft="10dp"/>
        <Button android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/windGraph"
                android:id="@+id/windGraph"
                android:layout_marginLeft="10dp"/>
    </LinearLayout>
</LinearLayout>