<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
               android:layout_width="fill_parent"
               android:layout_height="fill_parent"
               android:orientation="vertical">

    <TextView style="@style/deviceDetailSectionCaption"
              android:text="@string/generalDetails" />

    <TableLayout style="@style/deviceDetailTable">

        <TableRow android:id="@+id/tableRowDeviceName">
            <TextView android:text="@string/deviceName"
                      style="@style/deviceDetailDescription" />
            <TextView android:id="@+id/deviceName"
                      android:text="xxxxxxxx"
                      style="@style/deviceDetailContent"/>
        </TableRow>

        <TableRow android:id="@+id/tableRowRoom">
            <TextView android:text="@string/room"
                      style="@style/deviceDetailDescription" />
            <TextView android:id="@+id/room"
                      android:text="xxxxx"
                      style="@style/deviceDetailContent" />
        </TableRow>

        <TableRow android:id="@+id/tableRowMeasured">
            <TextView android:text="@string/measured"
                      style="@style/deviceDetailDescription" />
            <TextView android:id="@+id/measured"
                      android:text="xx.xx.xxxx xx:xx"
                      style="@style/deviceDetailContent" />
        </TableRow>
    </TableLayout>

    <TextView style="@style/deviceDetailSectionCaption"
              android:text="@string/currentWeather" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp">

        <ImageView android:id="@+id/currentWeatherImage"
                   android:layout_marginTop="10dp"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:contentDescription="@string/weather"
                   android:gravity="center"/>
        <TableLayout style="@style/deviceDetailTable"
                     android:id="@+id/weatherTable"
                     android:layout_marginLeft="42dp"
                     android:paddingTop="0dp">
            <TableRow android:id="@+id/tableRowTemperature">
                <TextView android:text="@string/temperature"
                          style="@style/deviceDetailDescription" />
                <TextView android:id="@+id/temperature"
                          android:text="xx Â°C"
                          style="@style/deviceDetailContent" />
            </TableRow>

            <TableRow android:id="@+id/tableRowWind">
                <TextView android:text="@string/wind"
                          style="@style/deviceDetailDescription" />
                <TextView android:id="@+id/wind"
                          android:layout_column="2"
                          android:text="xx km/h"
                          style="@style/deviceDetailContent" />
            </TableRow>

            <TableRow android:id="@+id/tableRowHumidity">
                <TextView android:text="@string/humidity"
                          style="@style/deviceDetailDescription" />
                <TextView android:id="@+id/humidity"
                          android:text="xx l"
                          style="@style/deviceDetailContent" />
            </TableRow>

            <TableRow android:id="@+id/tableRowCondition">
                <TextView android:text="@string/weather"
                          style="@style/deviceDetailDescription" />
                <TextView android:id="@+id/condition"
                          style="@style/deviceDetailContent"
                          android:text="sunny"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="20dp"
                  android:orientation="vertical"
                  android:id="@+id/graphLayout">

        <TextView style="@style/deviceDetailSectionCaption"
                  android:text="@string/plots" />

        <Button android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/temperatureGraph"
                android:id="@+id/temperatureGraph"
                android:layout_marginLeft="10dp"
                style="@style/button"/>
        <Button android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/humidityGraph"
                android:id="@+id/humidityGraph"
                android:layout_marginLeft="10dp"
                style="@style/button"/>
    </LinearLayout>

    <TextView style="@style/deviceDetailSectionCaption"
              android:text="@string/weatherForecast" />

    <ListView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:divider="@drawable/empty"
              android:id="@+id/weatherForecast" />
</LinearLayout>