<resources>
    <style name="toggleButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="seekBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">70dip</item>
        <item name="android:max">100</item>
        <item name="android:focusable">false</item>
    </style>


    <!-- #############################  -->
    <!--       ROOM DEVICE OVERVIEW     -->
    <!-- #############################  -->

    <style name="deviceOverviewParent" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#b84100</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="deviceOverviewDescription" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:maxWidth">150dp</item>
    </style>

    <style name="deviceOverviewCaption" parent="deviceOverviewDescription">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="deviceOverviewContent" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="deviceOverviewTable">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:stretchColumns">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="deviceOverviewLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="deviceOverviewLayoutDeviceName">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="deviceOverviewToggleButton" parent="toggleButton">
        <item name="android:layout_weight">0</item>
    </style>

    <style name="deviceOverviewSeekBar" parent="seekBar">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!-- #############################  -->
    <!--       DEVICE DETAIL            -->
    <!-- #############################  -->

    <style name="deviceDetailCaption">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/navigationBarBackground</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:gravity">center_horizontal</item>
        <!--<item name="android:layout_marginBottom">10dp</item>-->
    </style>

    <style name="deviceDetailSectionCaption">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#b84100</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>


    <style name="deviceDetailDescription" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:layout_column">1</item>

    </style>

    <style name="deviceDetailContent" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:gravity">right</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_column">2</item>
    </style>

    <style name="deviceDetailContentSeek" parent="seekBar">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_column">2</item>
    </style>

    <style name="deviceDetailContentToggle">
        <item name="android:layout_weight">0</item>
        <item name="android:layout_column">2</item>
    </style>

    <style name="deviceDetailTable">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stretchColumns">3</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>



    <!-- the theme applied to the application or activity -->
    <style name="ApplicationTheme" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarTabStyle">@style/ApplicationActionBarTabStyle</item>
        <item name="selectableItemBackground">@drawable/actionbar_item_selectable</item>
        <item name="abBackground">@color/navigationBarBackground</item>
    </style>

    <style name="ApplicationActionBarTabStyle">
        <item name="android:background">@drawable/actionbar_tab_bg</item>
    </style>


</resources>